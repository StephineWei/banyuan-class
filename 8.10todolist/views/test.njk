{% extends 'layout.njk' %}



{% block style %}
    <link rel='stylesheet', href='/css/style1.css'>
{% endblock %}

{% block content %}
 <div  class="header">
        <h2>To Do List</h2>
        <input type="text" class="task-input" placeholder="请输入任务">
        <span class="add-btn">Add</span>
    </div>
      
    <ul class="task-list">
    {%for item in tasks%}
    {%if item.checked%}
        <li class="task-item checked " task = '{{item.name}}'>{{item.name}}</li>
        {%else%}
        <li class="task-item" task = '{{item.name}}'>{{item.name}}</li>
        {%endif%}
    {%endfor%}
        {# <li class="task-item {{'checked'}}"></li> #}
    </ul>
{% endblock %}

{% block script %}
    <script src='/js/index.js'></script>
    <script src='/js/jquery-3.5.1/jquery-3.5.1.js'></script>
    
{% endblock %}